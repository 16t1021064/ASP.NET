@model IEnumerable<LiteCommerce.DomainModels.Employee>

@{
    ViewBag.Title = "Quản lý nhân viên";
}


<!-- Form để tìm kiếm -->
<div class="container-fluid">
    <form method="get" action="~/Employee/Index">
        <div class="input-group">
            <input name="searchValue" type="text" class="form-control" placeholder="Nhập tên cần tìm...">
            <div class="input-group-btn">
                <button class="btn btn-primary" type="submit">
                    <i class="glyphicon glyphicon-search"></i> Tìm kiếm
                </button>
            </div>
        </div>

    </form>
</div>
<!-- Danh sách nhà cung cấp -->
<div class="container-fluid">
    <div class="text-left">
        <p>Có tất cả <strong>1,024</strong> nhân viên. Bạn đang ở trang <strong>1</strong> trên tổng số <strong>15</strong> trang.</p>
    </div>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Họ</th>
                <th>Tên</th>
                <th>Ngày sinh</th>
                <th>Ảnh đại diện</th>
                <th>Ghi chú</th>
                <th>Email</th>
                <th class="text-right">
                    <a href="~/Employee/Add" class="btn btn-xs btn-primary">
                        <i class="fa fa-plus"></i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Photo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td class="text-right">
                        <a href="~/Employee/Edit/1234" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Employee/Delete/1234" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <ul class="pagination">
            <li><a href="#">&lt;&lt;</a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">&gt;&gt;</a></li>
        </ul>
    </div>
</div>